import React from 'react';
import { Table, Alert } from 'antd';
import packageConst from './packageConst.js';
import consts from '../../config/const.js';
import { changePagination, decimalTo4 } from '../../utils/util.js';

function DataTable({ dispatch, list, loading, selectedRowKeysArr, total }) {
  const tdWidth = { width: 200 };
  const columns = [{
    title: '单据日期',
    key: 'billDate',
    dataIndex: 'billDate',
    // fixed: 'left',
    ...tdWidth,
  },
  //  {
  //   title: '采购单号',
  //   key: 'purchaseNumber',
  //   dataIndex: 'purchaseNumber',
  //   fixed: 'left',
  //   ...tdWidth,
  // },
  {
    title: '请款单号',
    dataIndex: 'requestOrderId',
    key: 'requestOrderId',
    ...tdWidth,
  }, {
    title: '单据类型',
    dataIndex: 'type',
    key: 'type',
    ...tdWidth,
  }, {
    title: '法人主体',
    dataIndex: 'corporationName',
    key: 'corporationName',
    ...tdWidth,
  }, {
    title: '供应商',
    dataIndex: 'supplierName',
    key: 'supplierName',
    ...tdWidth,
  }, {
    title: '币别',
    dataIndex: 'currency',
    key: 'currency',
    ...tdWidth,
  }, {
    title: '汇率',
    dataIndex: 'exchangeRate',
    key: 'exchangeRate',
    ...tdWidth,
  }, {
    title: '货款金额',
    dataIndex: 'receiMoney',
    key: 'receiMoney',
    ...tdWidth,
  }, {
    title: '折扣',
    dataIndex: 'discountAmt',
    key: 'discountAmt',
    ...tdWidth,
  }, {
    title: '运费',
    dataIndex: 'shippingCost',
    key: 'shippingCost',
    ...tdWidth,
  }, {
    title: '留抵',
    dataIndex: 'reduceDebt',
    key: 'reduceDebt',
    ...tdWidth,
  }, {
    title: '应付金额',
    dataIndex: 'couldPay',
    key: 'couldPay',
    ...tdWidth,
  }, {
    title: '实付金额',
    dataIndex: 'foreignPayMoney',
    key: 'foreignPayMoney',
    ...tdWidth,
  }, {
    title: '付款类型',
    dataIndex: 'type',
    key: 'type',
    ...tdWidth,
    render: (value) => {
      let type = '';
      switch (value) {
        case '0':
          type = '预付';
          break;
        case '1':
          type = '账期';
          break;
        default:
          type = '-';
      }
      return type;
    },
  }, {
    title: '付款方式',
    dataIndex: 'methodName',
    key: 'methodName',
    ...tdWidth,
  }, {
    title: '付款科目',
    dataIndex: 'paySubject',
    key: 'paySubject',
    ...tdWidth,
  }, {
    title: '付款账户',
    dataIndex: 'payAccount',
    key: 'payAccount',
    ...tdWidth,
  }, {
    title: '结算方式',
    dataIndex: 'payWay',
    key: 'payWay',
    ...tdWidth,
  }, {
    title: '请款人',
    dataIndex: 'requester',
    key: 'requester',
    ...tdWidth,
  }, {
    title: '事业部',
    dataIndex: 'orgName',
    key: 'orgName',
    ...tdWidth,
  }, {
    title: '单据状态',
    dataIndex: 'voucherStatus',
    key: 'voucherStatus',
    ...tdWidth,
  }, {
    title: '单据号',
    dataIndex: 'voucherNumber',
    key: 'voucherNumber',
    ...tdWidth,
  }, {
    title: '推送金蝶时间',
    dataIndex: 'pushEasDate',
    key: 'pushEasDate',
    ...tdWidth,
  }, {
    title: '金蝶生成凭证错误描述',
    dataIndex: 'voucherErrorMessage',
    key: 'voucherErrorMessage',
    ...tdWidth,
  }];

  const onSelectChange = (selectedRowKeys, selectedRows) => {
    dispatch({ type: `${packageConst.modelNameSapce}/selectedRowKeys`, payload: selectedRowKeys });
    dispatch({ type: `${packageConst.modelNameSapce}/selectedRows`, payload: selectedRows });
  };
  const rowSelection = {
    selectedRowKeys: selectedRowKeysArr,
    onChange: onSelectChange,
    getCheckboxProps: record => ({
      // Column configuration not to be checked
      disabled: record.billDate === '本页合计' || record.billDate === '全部合计',
      name: record.name,
    }),
  };
  const changePaginationHandle = (page, pageSize) => {
    changePagination(page, pageSize, dispatch, 'purchasePayment');
  };
  const pageSizeChangeHandle = (current, size) => {
    dispatch({ type: `${packageConst.modelNameSapce}/tableData`, payload: { offset: 0, limit: size } });
    changePagination(current, size, dispatch, `${packageConst.modelNameSapce}`);
  };
  return (
    <div>
      <Alert message={`已选择${selectedRowKeysArr.length}项`} type="info" showIcon style={{ marginTop: '10px' }} />
      <Table
        columns={columns}
        dataSource={list}
        bordered
        // table必须有key属性，可以将设置id为key
        rowKey="id"
        rowSelection={rowSelection}
        loading={loading}
        style={{ marginTop: '20px' }}
        scroll={{ x: 5000 }}
        pagination={{
          total,
          defaultPageSize: consts.defaultPageSize,
          pageSizeOptions: consts.pageSizeOptions,
          showSizeChanger: true,
          hideOnSinglePage: true,
          onChange: changePaginationHandle,
          onShowSizeChange: pageSizeChangeHandle,
        }}

      />
    </div>
  );
}


export default DataTable;
