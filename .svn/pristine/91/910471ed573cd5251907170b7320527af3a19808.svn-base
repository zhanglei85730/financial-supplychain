import React from 'react';
import { connect } from 'dva';
import { Table, Alert } from 'antd';
import PropTypes from 'prop-types';
import packageConst from './packageConst.js';
import consts from '../../config/const.js';
import { changePagination, decimalTo4, decimalTo2 } from '../../utils/util.js';

function DataTable({ dispatch, list, loading, selectedRowKeysArr, total }, context) {
  const tdWidth = { width: 80 };
  const columns = [{
    title: '单据日期',
    key: 'billDate',
    dataIndex: 'billDate',
    fixed: 'left',
    width: 150,
  }, {
    title: '退货单号',
    key: 'returnOrderId',
    dataIndex: 'returnOrderId',
    fixed: 'left',
    width: 150,
  }, {
    title: '采购单号',
    dataIndex: 'purchaseOrderId',
    key: 'purchaseOrderId',
    width: 150,
  }, {
    title: '法人主体',
    dataIndex: 'corporationName',
    key: 'corporationName',
    width: 150,
  }, {
    title: '供应商',
    dataIndex: 'supplierName',
    key: 'supplierName',
    width: 250,
  }, {
    title: '单据类型',
    dataIndex: 'billType',
    key: 'billType',
    width: 150,
    render: (value) => {
      let type = '';
      switch (value) {
        case '0':
          type = '部分取消-有款';
          break;
        case '1':
          type = '全部取消-有款';
          break;
        case '2':
          type = '部分取消-无款';
          break;
        case '3':
          type = '全部取消-无款';
          break;
        default:
          type = '';
      }
      return type;
    },
  }, {
    title: 'SKU',
    dataIndex: 'skuCode',
    key: 'skuCode',
    width: 150,
  }, {
    title: 'SKU名称',
    dataIndex: 'skuName',
    key: 'skuName',
    width: 300,
  }, {
    title: '币别',
    dataIndex: 'currency',
    key: 'currency',
    ...tdWidth,
  }, {
    title: '退货单价',
    dataIndex: 'price',
    key: 'price',
    width: 105,
    render: decimalTo2,
  }, {
    title: '退货数量',
    dataIndex: 'quantity',
    key: 'quantity',
    ...tdWidth,
  }, {
    title: '退货金额',
    dataIndex: 'priceTotal',
    key: 'priceTotal',
    width: 105,
    render: decimalTo2,
  }, {
    title: '退款方式',
    dataIndex: 'paymentMethodType',
    key: 'paymentMethodType',
    ...tdWidth,
    render: (value) => {
      let result = '';
      switch (value) {
        case '0':
          result = '现金';
          break;
        case '1':
          result = '银行转账';
          break;
        case '2':
          result = '支付宝';
          break;
        case '3':
          result = '留抵';
          break;
        default: return value;
      }
      return result;
    },
  }, {
    title: '制单人',
    dataIndex: 'creatorName',
    key: 'creatorName',
    ...tdWidth,
  }, {
    title: '事业部',
    dataIndex: 'orgName',
    key: 'orgName',
    width: 150,
  }, {
    title: '单据状态',
    dataIndex: 'orgNamess',
    key: 'orgNamess',
    width: 150,
  }, {
    title: '单据号',
    dataIndex: 'voucherNumber',
    key: 'voucherNumber',
    width: 150,
  }, {
    title: '推送金蝶时间',
    dataIndex: 'pushEasDate',
    key: 'pushEasDate',
    width: 150,
  }, {
    title: '金蝶生成凭证错误描述',
    dataIndex: 'voucherErrorMessage',
    key: 'voucherErrorMessage',
    width: 200,
  }];
  const onSelectChange = (selectedRowKeys, selectedRows) => {
    dispatch({ type: `${packageConst.modelNameSapce}/selectedRowKeys`, payload: selectedRowKeys });
    dispatch({ type: `${packageConst.modelNameSapce}/selectedRows`, payload: selectedRows });
  };
  const rowSelection = {
    selectedRowKeys: selectedRowKeysArr,
    onChange: onSelectChange,
    getCheckboxProps: record => ({
      // Column configuration not to be checked
      disabled: record.createDate === '本页合计' || record.createDate === '全部合计',
      name: record.name,
    }),
  };
  const changePaginationHandle = (page, pageSize) => {
    changePagination(page, pageSize, dispatch, `${packageConst.modelNameSapce}`, context.queryParams);
  };
  const pageSizeChangeHandle = (current, size) => {
    // dispatch({ type: `${packageConst.modelNameSapce}/tableData`, payload: { offset: 0, limit: size } });
    changePagination(current, size, dispatch, `${packageConst.modelNameSapce}`, context.queryParams);
  };
  return (
    <div>
      <Alert message={`已选择${selectedRowKeysArr.length}项`} type="info" showIcon style={{ marginTop: '10px' }} />
      <Table
        columns={columns}
        dataSource={list}
        bordered
        // table必须有key属性，可以将设置id为key
        rowKey="id"
        rowSelection={rowSelection}
        loading={loading}
        style={{ marginTop: '20px' }}
        scroll={Object.assign(consts.globalTableScroll, { x: 2860 })}
        pagination={{
          total,
          defaultPageSize: consts.defaultPageSize,
          pageSizeOptions: consts.pageSizeOptions,
          showSizeChanger: true,
          hideOnSinglePage: false,
          onChange: changePaginationHandle,
          onShowSizeChange: pageSizeChangeHandle,
          showTotal: () => (consts.GlobalShowTotal(total)),
        }}
      />
    </div>
  );
}
DataTable.contextTypes = {
  queryParams: PropTypes.object,
};

export default DataTable;
